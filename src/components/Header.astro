---
import { Image } from "astro:assets";
import ButtonPrimary from "./ButtonPrimary.astro";
import logo from "../../public/images/rocio_logo.png";
import HamburguerMenu from "./HamburguerMenu";
---

<header
  class="fixed top-0 z-20 flex h-[60px] w-full px-[10%] max-lg:mr-auto lg:justify-around max-lg:justify-between bg-[rgba(0,0,0,0.3)]"
>
  <div class="flex place-items-center gap-3 h-[50px] w-[80px] p-[4px]">
    <Image
      src={logo}
      alt="logo"
      class="object h-full w-full"
      loading="eager"
      decoding="async"
    />
    <h1 class="text-xs hidden">Rocío seguros online</h1>
  </div>
  <nav
    class="max-lg:hidden flex h-full w-max gap-2 text-base text-white max-lg:mt-[30px] max-lg:flex-col max-lg:place-items-end max-lg:gap-2 lg:mx-auto lg:place-items-center"
  >
    <a
      class="hover:bg-[rgba(0,0,0,0.3)] h-full flex items-center px-2"
      href="#contacto"
    >
      Sobre mí
    </a>
    <a
      class="hover:bg-[rgba(0,0,0,0.3)] h-full flex items-center px-2"
      href="#seguros"
    >
      Seguros
    </a>
    <a
      class="hover:bg-[rgba(0,0,0,0.3)] h-full flex items-center px-2 smooth"
      href="https://www.sancristobal.com.ar/pas/rj-seguros-generales/seguros-de-retiro"
      target="_blank"
    >
      Ahorro e inversión
    </a>
    <a
      class="hover:bg-[rgba(0,0,0,0.3)] h-full flex items-center px-2"
      href="#contacto"
    >
      Contacto
    </a>
  </nav>
  <ButtonPrimary
    textButton="Cotizá tu auto"
    hrefLink="https://www.sancristobal.com.ar/pas/rj-seguros-generales/cotizar"
  />

  {/*Hamburguer menu */}
  <HamburguerMenu client:only="react" />
</header>
