---
import Image from "astro/components/Image.astro";

const { foto, altFoto, title, description } = Astro.props;
---

<article
  class="flex flex-col justify-center items-center rounded-2xl gap-4 text-white w-[300px] min-w-[200px] lg:min-h-[450px] bg-[#023C47] px-6 py-7 shadow-xl drop-shadow-xl"
>
  <Image src={foto} alt={altFoto} height="150" width="150" />
  <h3 class="text-2xl font-semibold text-center">{title}</h3>
  <h4 class="text-sm text-center">{description}</h4>
</article>
